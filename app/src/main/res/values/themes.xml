<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImportMAG" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#323232</item>
        <!-- Color de la barra de estados.. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Color de la barra de navegación. -->
        <item name="android:navigationBarColor">#FFFFFF</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ImportMAG.NoActionBar" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Color de la barra de estados.. -->
        <item name="android:statusBarColor">@color/white</item>

        <item name="android:windowLightStatusBar">true</item>
        <!-- Color de la barra de navegación. -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>