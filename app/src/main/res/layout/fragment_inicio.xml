<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".fragments.inicio.InicioFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_title_background="@drawable/base_slider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/txtBuscar"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/buscar_drawa"
                    android:drawableLeft="@drawable/ic_buscar"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Buscar"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_slider" />
                <!--><!-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerProdDescuentos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_Ofertas" />

                <TextView
                    android:id="@+id/txt_Ofertas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="16dp"
                    android:text="Productos Destacados"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtBuscar" />

                <TextView
                    android:id="@+id/txt_Ofertas2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:paddingStart="16dp"
                    android:text="Import MAG"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imgWPPicono"
                    android:layout_width="65dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="45dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerProdDescuentos"
                    app:srcCompat="@drawable/wpplogo"></ImageView>

                <ImageView
                    android:id="@+id/imgFBicono"
                    android:layout_width="65dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="45dp"
                    app:layout_constraintEnd_toStartOf="@+id/imgINSicono"
                    app:layout_constraintStart_toEndOf="@+id/imgWPPicono"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerProdDescuentos"
                    app:srcCompat="@drawable/fb">

                </ImageView>

                <ImageView
                    android:id="@+id/imgINSicono"
                    android:layout_width="65dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="40dp"
                    android:clickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerProdDescuentos"
                    app:srcCompat="@drawable/ins">

                </ImageView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="SÃ­guenos en nuestras redes sociales!"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgFBicono" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>